<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton">
        <item name="android:minWidth">260dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="paddingStart">40dp</item>
        <item name="paddingEnd">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="cornerRadius">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="background">@drawable/rect</item>
        <item name="elevation">50dp</item>
    </style>
    <style name="InlineButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/inline_btn_bg</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>