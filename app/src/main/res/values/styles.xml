<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton">
        <item name="android:minWidth">260dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">1dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:stateListAnimator">@drawable/primary_btn_smooth_shadow</item>
        <item name="android:outlineSpotShadowColor">@color/purple_200</item>
        <item name="android:background">@drawable/oval_btn_bg</item>
    </style>
    <style name="InlineButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/inline_btn_bg</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@drawable/inline_btn_smooth_press</item>
    </style>
</resources>