<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton">
        <item name="android:minWidth">260dp</item>
        <item name="android:textFontWeight">@integer/font_weight_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">40dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">1dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:stateListAnimator">@drawable/primary_btn_smooth_shadow</item>
        <item name="android:outlineSpotShadowColor">@color/purple_200</item>
        <item name="android:background">@drawable/oval_btn_bg</item>
    </style>
    <style name="InlineButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/inline_btn_bg</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@drawable/inline_btn_smooth_press</item>
    </style>
    <style name="FormField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/form_filed_padding</item>
        <item name="android:background">@drawable/form_field_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pink_100</item>
    </style>
    <style name="FormFieldError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="ToolbarAction" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textColor">@color/pink_100</item>
        <item name="android:textFontWeight">@integer/font_weight_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="BottomSheetAction">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="iconPadding">@dimen/icon_padding_in_bottom_sheet_btn</item>
        <item name="android:padding">@dimen/padding_in_bottom_sheet_btn</item>
    </style>
    <style name="ScreenSubTitle">
        <item name="android:textSize">25sp</item>
        <item name="android:lineHeight">33sp</item>
        <item name="android:textFontWeight">@integer/font_weight_bold</item>
    </style>
    <style name="NoteTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">26sp</item>
        <item name="android:textFontWeight">@integer/font_weight_bold</item>
    </style>
    <style name="NoteCreateTime">
        <item name="android:textSize">12.8sp</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:textColor">@color/pink_100</item>
    </style>
    <style name="NoteContent">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">26sp</item>
        <item name="android:textColor">@color/pink_100</item>
    </style>
</resources>